<div class="row">
  <div class="col-sm-12">
    <% flash.each do |name, value| %>
        <div class="alert alert-<%="#{name}"%>" role="alert">
          <a href="#" class="close" data-dismiss="alert">&#215;</a>
          <ul>
            <li>
              <%= value %>
            </li>
          </ul>
        </div>
    <% end %>
  </div>
</div>