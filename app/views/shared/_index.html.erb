<div class="row header">
  <% obj.each do |o| %>
      <div class="col-sm-3">
        <div class="thumbnail">
          <div class="item-header">
            <span class="item-attribute"><%= o.name %></span>
          </div>
          <%= link_to (image_tag o.image.url(:medium)), item_path(o) %>
          <div class="item-footer" align="center">
            Rp. <%= number_to_currency o.price, precision: 0, unit: "" %>
          </div>
          <div class="item-actions" align="center">
            <%= link_to "Edit", edit_item_path(o), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete", item_path(o),
                        method: :delete,
                        data: {confirm: "Are you sure ?"},
                        class: "btn btn-xs btn-danger"
            %>
          </div>
        </div>
      </div>
  <% end %>
</div>
