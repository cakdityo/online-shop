<div class="row">
  <div class="col-sm-6 col-sm-offset-2 item-show-image">
    <%= image_tag @item.image.url(:large), class: "img-responsive" %>
    <% if user_signed_in? %>
    <div class="item-actions" align="center">
      <%= link_to 'Edit', edit_item_path(@item), class: "btn btn-xs btn-primary" %>
      <%= link_to 'Delete', item_path(@item), method: :delete, data: {confirm: "Are you sure ?"}, class: "btn btn-xs btn-danger" %>
    </div>
    <% end %>
  </div>
  <div class="col-sm-2 item-meta-body">
    <span class="item-attribute">Name:</span>
    <p><%= @item.name %></p>
    <span class="item-attribute">Price:</span>
    <p>Rp. <%= number_to_currency @item.price, precision: 0, unit: "" %></p>
    <% if @item.description != '' %>
      <span class="item-attribute">Description:</span>
      <p><%= @item.description %></p>
    <% end %>
    <% if @item.categories != [] %>
        <p class="item-attribute">Category:</p>
        <% @item.categories.each do |category|  %>
            <%= link_to category.name, category_path(category), class: "label label-success" %>
        <% end %>
    <% end %>
  </div>
</div>