<div class="row header">
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <div class="thumbnail">
        <div class="item-header">
          <span class="item-attribute"><%= item.name %></span>
        </div>
        <%= link_to (image_tag item.image.url(:medium)), item_path(item) %>
        <div class="item-footer" align="center">
          Rp. <%= number_to_currency item.price, precision: 0, unit: "" %>
        </div>
        <div class="item-actions" align="center">
          <%= link_to "Edit", edit_item_path(item), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete", item_path(item),
                      method: :delete,
                      data: {confirm: "Are you sure ?"},
                      class: "btn btn-xs btn-danger"
          %>
        </div>
      </div>
    </div>
  <% end %>
</div>
